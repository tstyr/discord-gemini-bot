{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "python main.py",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "PYTHON_VERSION": "3.11",
        "PORT": "${{ PORT }}",
        "API_PORT": "${{ PORT }}",
        "API_HOST": "0.0.0.0",
        "NODE_ENV": "production",
        "LOG_LEVEL": "INFO"
      }
    }
  }
}